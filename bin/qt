#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.join(File.realpath(File.dirname($0)), '..', 'lib'))

require 'quadtone'

Quadtone::Tool.process_args(ARGV,
  'add-printer'   => Quadtone::AddPrinterTool,
  'chart'         => Quadtone::ChartTool,
  'dump'          => Quadtone::DumpTool,
  'init'          => Quadtone::InitTool,
  'profile'       => Quadtone::ProfileTool,
  'separate'      => Quadtone::SeparateTool,
  'test'          => Quadtone::TestTool,
)